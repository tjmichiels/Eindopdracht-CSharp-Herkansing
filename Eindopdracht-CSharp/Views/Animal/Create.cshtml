@model Eindopdracht_CSharp.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animal</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <select asp-for="Species" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Eindopdracht_CSharp.Enums.Species)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Species" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Eindopdracht_CSharp.Enums.AnimalSize)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DietaryClass" class="control-label">Dietary Class</label>
                <select asp-for="DietaryClass" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Eindopdracht_CSharp.Enums.DietaryClass)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="DietaryClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityPattern" class="control-label">Activity Pattern Type</label>
                <select asp-for="ActivityPattern" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Eindopdracht_CSharp.Enums.ActivityPattern)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="ActivityPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpaceRequirement" class="control-label">Space Requirement (in mÂ²)</label>
                <input asp-for="SpaceRequirement" class="form-control"/>
                <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityRequirement" class="control-label">Security Level Requirement</label>
                <select asp-for="SecurityRequirement" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(Eindopdracht_CSharp.Enums.SecurityLevel)))
                    {
                        <option value="@((int)item)">@item.ToString()</option>
                    }
                </select>
                <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnclosureId" class="control-label"></label>
                <select asp-for="EnclosureId" class="form-control" asp-items="ViewBag.Enclosures"></select>
                <span asp-validation-for="EnclosureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

