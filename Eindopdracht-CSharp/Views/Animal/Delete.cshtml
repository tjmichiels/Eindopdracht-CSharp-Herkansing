@model Eindopdracht_CSharp.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animal</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Species)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Category.Name) *@
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category?.Name
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DietaryClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DietaryClass)
        </dd>
        <dt class="col-sm-2">
            Activity Pattern
            @* @Html.DisplayNameFor(model => model.ActivityPattern) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityPattern)
        </dd>
        <dt class="col-sm-2">
            Space Requirement
            @* @Html.DisplayNameFor(model => model.SpaceRequirement) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpaceRequirement) m²
        </dd>
        <dt class="col-sm-2">
            Security Level Requirement
            @* @Html.DisplayNameFor(model => model.SecurityRequirement) *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecurityRequirement)
        </dd>
        <dt class="col-sm-2">
            Zoo & Enclosure Name
            @* @Html.DisplayNameFor(model => model.Enclosure.Name) *@
        </dt>
        <dd class="col-sm-10">
            @(Model.Enclosure?.Zoo?.Name != null
                ? $"{Model.Enclosure.Zoo.Name}: {Model.Enclosure.Name}"
                : Model.Enclosure?.Name ?? "–")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-action="Index">Back to List</a>
    </form>
